<launch>
  <arg name="model" default="$(find adamr2_description)/urdf/robot_sim.xacro"/>
  <arg name="rvizconfig" default="$(find adamr2_gazebo)/config/willowgarage_teleop.rviz" />

  <include file="$(find adamr2_gazebo)/launch/adamr2_willowgarage.launch">
    <arg name="model" value="$(arg model)"/>
  </include>

  <include file="$(find adamr2_bringup)/launch/sensor/joy.launch"/>
  <node name="rviz" pkg="rviz" type="rviz" args="-d $(arg rvizconfig)" required="true"/>
</launch>