<?xml version="1.0"?>
<robot xmlns:xacro="http://ros.org/wiki/xacro">
  <xacro:macro name="caster" params="prefix parent *joint_origin *joint_axis">
    <joint name="${prefix}_caster_support_joint" type="continuous">
      <xacro:insert_block name="joint_origin"/>
      <parent link="${parent}"/>
      <child link="${prefix}_caster_support_link"/>
      <xacro:insert_block name="joint_axis"/>
    </joint>
    
    <link name="${prefix}_caster_support_link">
      <visual>
        <origin rpy="0.0 0.0 0.0"/>
        <geometry>
          <mesh filename="package://adamr2_description/meshes/caster_link.STL"/>
        </geometry>
        <material name="red">
          <color rgba="0.0 0.0 0.0 1.0"/>
        </material>
      </visual>

      <inertial>
        <origin xyz="0.0 0.0 0.0"/>
        <mass value="0.3"/>
        <inertia ixx="1e-5" ixy="0.0" ixz="0.0" iyy="1e-5" iyz="0.0" izz="1e-5"/>
      </inertial>
    </link>

    <joint name="${prefix}_caster_wheel_joint" type="continuous">
      <origin xyz="-0.030 0.0 -0.072" rpy="0.0 0.0 0.0"/>
      <parent link="${prefix}_caster_support_link"/>
      <child link="${prefix}_caster_wheel_link"/>
      <axis xyz="0.0 1 0.0"/>
    </joint>

    <link name="${prefix}_caster_wheel_link">
      <inertial>
        <origin xyz="0.0 0.0 0.0"/>
        <mass value="0.17"/>
        <inertia ixx="1e-5" ixy="0.0" ixz="0.0" iyy="1e-5" iyz="0.0" izz="1e-5"/>
      </inertial>

      <collision>
        <origin xyz="0.0 0.0 0.0" rpy="${radians(90)} 0.0 0.0"/>
        <geometry>
          <cylinder radius="0.0375" length="0.025"/>
        </geometry>
      </collision>
    </link>
  </xacro:macro>
</robot>