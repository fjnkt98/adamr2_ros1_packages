<launch>
  <!-- MAP SERVER -->
  <arg name="map_file" default="$(env HOME)/experiment_map/large_map/map.yaml"/>
  <node name="map_server" pkg="map_server" type="map_server" args="$(arg map_file)">
    <param name="frame_id" value="map" />
  </node>

  <!-- AMCL -->
  <include file="$(find adamr2_navigation)/launch/amcl_diff.launch"/>

  <!-- MOVE BASE -->
  <node pkg="move_base" type="move_base" respawn="false" name="move_base" output="screen">
    <!-- COST MAP -->
    <rosparam file="$(find adamr2_navigation)/config/costmap/costmap_local.yml"/>
    <rosparam file="$(find adamr2_navigation)/config/costmap/costmap_global.yml"/>

    <!-- BASE GLOBAL PLANNER -->
    <rosparam file="$(find adamr2_navigation)/config/planner/global/navfn_planner.yml" command="load" />
    <!-- BASE LOCAL PLANNER -->
    <rosparam file="$(find adamr2_navigation)/config/planner/local/trajectory_planner.yml" command="load" />
    <!-- RECOVERY -->
    <rosparam file="$(find adamr2_navigation)/config/planner/recovery_behaviors.yml" command="load"/>

    <!-- MOVE BASE -->
    <param name="controller_frequency" value="5.0" />
    <param name="controller_patience" value="15.0" />
    <param name="max_planning_retries" value="10" />
    <param name="oscillation_timeout" value="10.0" />
    <param name="clearing_rotation_allowed" value="true" />

    <!-- remap cmd_vel topic for gazebo -->
    <remap from="cmd_vel" to="/adamr2/diff_drive_controller/cmd_vel"/>
  </node>

  <node name="rviz" pkg="rviz" type="rviz" required="true" args="-d $(find adamr2_navigation)/rviz/navigation.rviz" />
</launch>